    "query/**",
    "devtools/**"
  ],
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,json,html,tsx}": "prettier --write"
  }
}
